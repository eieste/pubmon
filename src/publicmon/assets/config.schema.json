{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "PublicMonitor Config",
    "description": "Describes the Public Monitor configuration",
    "type": "object",
    "$defs": {
        "dimensions": {
            "type": "array",
            "additionalProperties": false,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "name",
                    "value"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            }
        },
        "ping": {
            "additionalProperties": false,
            "type": "object",
            "required": [
                "title",
                "class"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "class": {
                    "type": "string",
                    "enum": [
                        "ping"
                    ]
                },
                "dimensions": {
                    "$ref": "#/$defs/dimensions"
                },
                "settings": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "timeout": {
                            "type": "number",
                            "multipleOf": 1,
                            "minimum": 10,
                            "maximum": 86400,
                            "description": "Value when a PING was detected as Timeout ( as Seconds ) "
                        },
                        "count": {
                            "type": "number"
                        },
                        "target": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "properties": {
        "global": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "check_interval": {
                    "type": "number"
                }
            }
        },
        "monitor": {
            "type": "array",
            "additionalProperties": false,
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/$defs/ping"
                    }
                ]
            }
        }
    }
}
