{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "Product",
    "description": "A product from Acme's catalog",
    "type": "object",
    "properties": {
        "global":  {
            "type": "object",
            "properties": {
                "schedule_interval": {
                    "type": "number"
                }
            }
        },
        "monitor": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "class": {
                        "type": "string"
                    },
                    "subclasses": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "settings": {
                        "type": "object"
                    }
                }
            }
        }
    }
}