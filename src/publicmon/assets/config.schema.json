{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "PublicMonitor Config",
    "description": "Describes the Public Monitor configuration",
    "type": "object",
    "$defs": {
        "dimensions": {
            "type": "array",
            "additionalProperties": false,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "name",
                    "value"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            }
        },
        "dns": {
            "additionalProperties": false,
            "type": "object",
            "required": [
                "title",
                "class"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "class": {
                    "type": "string",
                    "enum": [
                        "dns"
                    ]
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "dimensions": {
                    "$ref": "#/$defs/dimensions"
                },
                "settings": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "timeout": {
                            "type": "number",
                            "multipleOf": 1,
                            "minimum": 3,
                            "maximum": 86400,
                            "description": "Value when a DNSRequest was Timeout ( as Seconds ) "
                        },
                        "nameservers": {
                            "type": "array",
                            "additionalProperties": false,
                            "items": {
                                "type": "string"
                            }
                        },
                        "record_type": {
                            "type": "string",
                            "enum": ["A", "CNAME"]
                        },
                        "record_name": {
                            "type": "string"
                        },
                        "expectations": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "regex": {
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": false
                            }
                        }
                    }
                }
            }
        },
        "ping": {
            "additionalProperties": false,
            "type": "object",
            "required": [
                "title",
                "class"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "class": {
                    "type": "string",
                    "enum": [
                        "ping"
                    ]
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "dimensions": {
                    "$ref": "#/$defs/dimensions"
                },
                "settings": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "timeout": {
                            "type": "number",
                            "multipleOf": 1,
                            "minimum": 3,
                            "maximum": 86400,
                            "description": "Value when a PING was detected as Timeout ( as Seconds ) "
                        },
                        "count": {
                            "type": "number"
                        },
                        "target": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "http": {
            "additionalProperties": false,
            "type": "object",
            "required": [
                "title",
                "class"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "class": {
                    "type": "string",
                    "enum": [
                        "http"
                    ]
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "dimensions": {
                    "$ref": "#/$defs/dimensions"
                },
                "settings": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "url": {
                            "type": "string"
                        },
                        "http_request": {
                            "type": "object",
                            "additionalProperties": true,
                            "properties": {
                                "method": {
                                    "type": "string",
                                    "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
                                },
                                "header": {
                                    "type": "object"
                                },
                                "body": {
                                    "type": "string"
                                },
                                "allow_redirects": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "timeout": {
                                    "type": "number",
                                    "multipleOf": 1,
                                    "minimum": 3,
                                    "maximum": 86400,
                                    "description": "Value when a PING was detected as Timeout ( as Seconds ) "
                                }
                            }
                        },
                        "expected_header":{
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "regex": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "expected_body":{
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "regex": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "properties": {
        "global": {
            "type": "object",
            "additionalProperties": false,
            "required": ["check_interval", "socket_file"],
            "properties": {
                "check_interval": {
                    "type": "number"
                },
                "socket_file": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                }
            }
        },
        "monitor": {
            "type": "array",
            "additionalProperties": false,
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/$defs/ping"
                    },
                    {
                        "$ref": "#/$defs/dns"
                    },
                    {
                        "$ref": "#/$defs/http"
                    }
                ]
            }
        }
    }
}
